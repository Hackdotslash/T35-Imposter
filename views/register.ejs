<%- include('partials/header'); -%>



 
<div class="container" style="margin-bottom: 80px;">
  <main>
    <div class="py-5 text-center">
      <img class="d-block mx-auto mb-4" src="images/blood.jpg" alt="" width="200" height="120">
      <h2>Registeration</h2>
      <p class="lead">Register for your organisation for Rapid Red services here.</p>
    </div>

    <div class="row g-3">
      <div class="col-md-5 col-lg-4 order-md-last">
        <img src="images/doctor.png">
    </div>
      <div class="col-md-7 col-lg-8">
        <h4 class="mb-3">Details</h4><hr>
        <form class="needs-validation" novalidate>
          <div class="row g-3">
            <div class="col-sm-6">
              <label for="orgName" class="form-label">Hospital Name</label>
              <input type="text" class="form-control" id="orgName" placeholder="Enter Name" required>
              <div class="invalid-feedback">
                Valid name is required.
              </div>
            </div>

            <div class="col-12">
              <label for="email" class="form-label">Hospital Email</label>
              <input type="email" class="form-control" id="email" placeholder="you@example.com" required>
              <div class="invalid-feedback">
                Please enter a valid email address for shipping updates.
              </div>
            </div>

            <div class="col-12">
              <label for="address" class="form-label">Address</label>
              <input type="text" class="form-control" id="address" placeholder="1234 Main St" required>
              <div class="invalid-feedback">
                Please enter your shipping address.
              </div>
            </div>

            <div class="col-md-5">
              <label for="country" class="form-label">Country</label>
              <select class="form-select" id="country" required>
                <option value="">Choose...</option>
                <option>India</option>
              </select>
              <div class="invalid-feedback">
                Please select a valid country.
              </div>
            </div>

            <div class="col-md-4">
              <label for="state" class="form-label">State</label>
              <select class="form-select" id="state" required>
                <option value="">Choose...</option>
                <option>Gujarat</option>
                <option disabled>Rajasthan</option>
                <option disabled>Goa</option>
              </select>
              <div class="invalid-feedback">
                Please provide a valid state.
              </div>
            </div>

            <div class="col-md-3">
              <label for="zip" class="form-label">Pin</label>
              <input type="number" class="form-control" id="zip" placeholder="Pincode" required min="100000" max="999999">
              <div class="invalid-feedback">
                Pincode code required.
              </div>
            </div>
          </div>

          <hr class="my-4">

          <p>Thankyou for registering with us. We assure you great services.</p>

          <hr class="my-4">
          <button class="w-100 btn btn-primary btn-lg" type="submit">Register</button>
          <hr class="my-4">
        </form>
      </div>
    </div>
  </main>
</div>


  <script src="/docs/5.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>

  <script src="form-validation.js"></script>


<%- include('partials/footer'); -%>